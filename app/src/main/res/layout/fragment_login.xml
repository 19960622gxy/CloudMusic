<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <!--<TextView-->
        <!--android:text="登陆的fragment"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"></TextView>-->
    <!--<ImageView-->
        <!--android:layout_width=""-->
        <!--android:layout_height="" />-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="50dp"
              android:src="@mipmap/ic_wy"/>

          <!--输入框-->
          <LinearLayout
              android:padding="30dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
          <android.support.design.widget.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="请输入用户名">

              <EditText
                  android:id="@+id/et_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />

          </android.support.design.widget.TextInputLayout>

          <android.support.design.widget.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="请输入密码">
              <EditText
                  android:id="@+id/et_pass"
                  android:inputType="textPassword"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />

          </android.support.design.widget.TextInputLayout>
              <!--登录注册按钮-->
              <LinearLayout
                  android:layout_marginTop="20dp"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <android.support.v7.widget.AppCompatButton
                      android:id="@+id/bt_register"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="注册"
                      android:textColor="@drawable/bt_experience_txt_sel"
                      android:background="@drawable/bt_fragment_login_regisetlogin"/>

                  <View
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"></View>
                  <android.support.v7.widget.AppCompatButton
                      android:id="@+id/bt_login"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="登录"
                      android:textColor="@drawable/bt_experience_txt_sel"
                      android:background="@drawable/bt_fragment_login_regisetlogin"/>
              </LinearLayout>


          </LinearLayout>

          <!--登陆方式-->
      </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="17dp"
            android:text="其它方式登录" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_wx_unsel" />
            <View
                  android:layout_width="20dp"
                  android:layout_height="match_parent"></View>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_qq_unsel" />
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_sina_unsel" />
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"></View>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_wy_unsel" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>